<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Control de Tareas para mi </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRazorPages1.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="top-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand titulo-app m-0" asp-area="" asp-page="/Index">MP MiPanel</a>

            <!-- Botón toggle SIEMPRE visible para que se note -->
            <button id="toggleSidebar" class="btn btn-sm btn-toggle">
                ☰ Toggle navegación
            </button>
        </div>
    </header>

    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Index">🏠 Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Finalizadas">✅ Tareas Finalizadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Canceladas">⛔ Tareas Canceladas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Privacy">🔒 Privacidad</a>
                </li>
            </ul>
        </nav>

        <!-- Contenido -->
        <div id="content" class="content flex-grow-1">
            <main role="main" class="py-3">
                @RenderBody()
            </main>

            <footer class="footer-app text-center">
                <div class="container">
                    &copy; 2025 Ignacio Adrian Layme Delgado — <a class="link-contraste" asp-area="" asp-page="/Privacy">Privacidad</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
